<Page x:Class="UpCloudGui.LoginIn"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UpCloudGui"
      mc:Ignorable="d" 
      d:DesignHeight="350" d:DesignWidth="500"
      Title="Login">

    <Grid Background="White">
        <TextBox x:Name="uName" HorizontalAlignment="Left" Margin="166,82,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Username" HorizontalAlignment="Left" Margin="69,78,0,0" VerticalAlignment="Top"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="69,149,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="pass" HorizontalAlignment="Left" Margin="166,157,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button Content="Login" HorizontalAlignment="Left" Margin="88,238,0,0" VerticalAlignment="Top" Height="34" RenderTransformOrigin="0.046,0" Width="103" Click="Button_Click"/>
        <Button Content="Register as manager" HorizontalAlignment="Left" Margin="226,238,0,0" VerticalAlignment="Top" Width="90" Height="34" RenderTransformOrigin="0.993,0.176"/>

    </Grid>
</Page>
